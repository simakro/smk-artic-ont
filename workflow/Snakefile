# The main entry point of your workflow.
# After configuring, running snakemake -n in a clone of this repository should successfully execute a dry-run of the workflow.


report: "report/workflow.rst"

# Allow users to fix the underlying OS via singularity.
singularity: "docker://continuumio/miniconda3"

samples = glob_wildcards("results/{sample}/medaka/consensus.fasta")
rule all:
    input:
        expand("results/{sample}/medaka/consensus.fasta", sample=samples)
        # The first rule should define the default target files
        # Subsequent target rules can be specified below. They should start with all_*.


include: "rules/common.smk"


rule porechop_adapter_barcode_trimming:
    input:
        fastq_in="input_data/{sample}.fastq"
    output:
        #directory("results/{sample}")
        "results/{sample}/{sample}_pc.fastq"
    conda:
        "envs/porechop.yaml"
    threads: 8
    shell:
        "porechop --require_two_barcodes -i {input.fastq_in} -b {output} --threads {threads}"


rule medaka_polishing:
    input:
        "results/{sample}/{sample}_pc.fastq"
    output:
        "results/{sample}/{sample}_polished.fastq"
    conda:
        "envs/medaka.yaml"
    threads: 2
    shell:
        "medaka_consensus -i {input} -d ../workflow/MN908947.3_SARS-CoV2_Wuhan-reference.fasta -t {threads}"